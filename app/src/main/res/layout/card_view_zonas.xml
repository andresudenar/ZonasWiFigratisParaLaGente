<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_report"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/transparenciaOscura">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:drawableLeft="@drawable/ic_wifi_white_24dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_wifi_white_24dp"
                android:gravity="center_vertical"
                android:text="NOMBRE"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/departamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:drawableLeft="@drawable/ic_star_border_white_24dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_star_border_white_24dp"
                android:gravity="center_vertical"
                android:text="Departamento"
                android:textColor="#ffffff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/municipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:drawableLeft="@drawable/ic_star_white_24dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_star_white_24dp"
                android:gravity="center_vertical"
                android:text="Municipio"
                android:textColor="#ffffff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:drawableLeft="@drawable/ic_directions_white_24dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_directions_white_24dp"
                android:gravity="center_vertical"
                android:text="Direccion"
                android:textColor="#ffffff"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>